<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_bg"
    tools:context=".dashboard"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"

                />
            <ImageView
                android:layout_alignParentRight="true"

                android:layout_width="62dp"
                android:padding="0dp"
                android:elevation="3dp"
                android:layout_height="62dp"
                android:src="@drawable/ic_user"
                />
        </RelativeLayout>
        <GridLayout
            android:rowCount="4"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="22dp"
                android:layout_margin="12dp"
                android:onClick="attendance_click"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/blue_border_rounded_cornwe"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:src="@drawable/attendance"
                        />
                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#1F51FF"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Attendance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="22dp"
                android:layout_margin="12dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/blue_border_rounded_cornwe"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:src="@drawable/scorecard"
                        />
                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#1F51FF"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Marksheet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="22dp"
                android:layout_margin="12dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/blue_border_rounded_cornwe"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:src="@drawable/certificate"
                        />
                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#1F51FF"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Certficates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="22dp"
                android:layout_margin="12dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/blue_border_rounded_cornwe"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:src="@drawable/projects"
                        />
                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#1F51FF"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Projects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="22dp"
                android:layout_margin="12dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/blue_border_rounded_cornwe"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:src="@drawable/placement"
                        />
                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#1F51FF"
                        android:fontFamily="@font/poppins_medium"
                        android:textAlignment="center"
                        android:text="Placement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="-8dp"
                        android:textColor="#1F51FF"
                        android:fontFamily="@font/poppins_medium"
                        android:textAlignment="center"
                        android:text="History"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="22dp"
                android:layout_margin="12dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/blue_border_rounded_cornwe"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:src="@drawable/goal"
                        />
                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#1F51FF"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Extra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="-8dp"
                        android:textColor="#1F51FF"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Curricular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="22dp"
                android:layout_margin="12dp"
                android:onClick="student_click"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/blue_border_rounded_cornwe"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:src="@drawable/adduser"
                        />
                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#1F51FF"
                        android:fontFamily="@font/poppins_medium"
                        android:textAlignment="center"
                        android:text="Student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="22dp"
                android:layout_margin="12dp"
                android:onClick="logout"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/blue_border_rounded_cornwe"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_logout"
                        />
                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#1F51FF"
                        android:fontFamily="@font/poppins_medium"
                        android:textAlignment="center"
                        android:text="Logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </GridLayout>


    </LinearLayout>
</ScrollView>